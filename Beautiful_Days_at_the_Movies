# First solution (this one is looooong):
# This one includes many topics, try to understand behind the code :D 

def beautifulDays(i, j,k):
    count = 0
    reverse_L = list()
    normal_list = [i for i in range(i, j + 1)]
    num_List = [str(i) for i in range(i, j + 1)]
    for num in num_List:
        num = list(reversed(num))
        my_Num = int("".join(num))
        reverse_L.append(my_Num)

    for i in range(len(normal_list)):
        check = (normal_list[i] - reverse_L[i]) / k
        if check.is_integer() == True:
            count += 1
    return count

# Second solution: 

def beautifulDays(i, j,k):
    answer = len([num for num in range(i, j + 1) if (num - int(str(num)[::-1])) % k == 0])
    return answer
